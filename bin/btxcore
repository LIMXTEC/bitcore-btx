#!/usr/bin/env node

if (parseInt(process.version.split('.')[0].slice(1)) < 8) {
  throw new Error('BTXCore requires Node version 8 or higher.');
}

var btxcore = require('btxcore-node/lib/cli/btxcore');
var path = require('path');
var servicesPath = path.resolve(__dirname, '../');
var additionalServices = ['insight-btx-api', 'insight-btx-ui'];
btxcore(servicesPath, additionalServices);
